<Window x:Class="图形界面WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:图形界面WPF"
        mc:Ignorable="d"
        Title="列车运行图数据综合运用系统" Height="450" Width="800">
    <Grid>
   <DockPanel><!--停靠布局，让菜单栏和工具栏位于窗口顶部-->
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="文件">
                    <!--菜单项为MenuItem，文字使用属性 Header-->
                    <MenuItem Name="MenuItemNew" Header="新建" >
                        <MenuItem Name="MenuItemNewProject" Header="新建项目" Click="MenuItemNewProject_OnClick"></MenuItem>
                    </MenuItem>
                    <MenuItem Name="MenuItemOpen" Header="打开">
                        <MenuItem Name="MenuItemOpenProject" Header="打开已有项目"  Click="MenuItemOpenProject_OnClick"></MenuItem>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="数据导入"></MenuItem>
                <MenuItem Header="运行图编辑"></MenuItem>
            </Menu>
        </DockPanel>

    </Grid>
</Window>
